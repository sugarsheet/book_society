{
  "background_color": "lightgrey",
  "description": "Book Society : your own reading club, never again to be fooled by lying reviews. The pleasure of reading something inspiring.",
  "display": "fullscreen",
  "name": "Book Society",
  "icons": [
    <% files =
Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
  <% files.each_with_index do |file, index| %>
    <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
  {
    "src": "<%= image_path "icons/#{file}" %>",
    "sizes": "<%= match && match[:size] %>",
    "type": "image/png"
  }<%= "," unless (files.size - 1) == index %>
  <% end %>
 ]
}
