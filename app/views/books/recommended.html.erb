<div class="main-container">
  <div class="space-header">
    <div class="link-dashboard mb-1">
      <img class="round-img-dashboard" src="https://www.gravatar.com/avatar/6b844ee7b315c16675d09696731e369e.jpg" alt="jiwon">
      <a class="h1-dashboard py-2"> Hi <%= current_user.first_name%>!</a>
    </div>
  </div>
  <div class="container recommended-books px-4 mb-2">
    <h1 class="text-left"><strong> <%= "You have #{@recommended_books.count} recommendations" %></strong></h1>
    <p class="text-left"> <%= "Good work #{current_user.first_name} ! Be inspired to read something you really like." %> </p>
      <div class="recommended-list">
        <% @recommended_books.each do |recommended_book| %>
          <div class="card-recommended-book pt-3">
            <div class="infos">
              <h1 class="text-left"> <strong> <%= link_to "#{recommended_book.book.title}", book_path(recommended_book.book) %></strong></h1>
              <p class="text-left"> <%= "#{recommended_book.book.author.first_name}, #{recommended_book.book.author.last_name}" %></p>
              <div class="rating">
                <% if recommended_book.book.reviews.count > 0 %>
                <% recommended_book.book.average_ratings.times do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                  </svg>
                <% end %>
                <% (5-recommended_book.book.average_ratings).times do %>
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                  </svg>
                <% end %>
                <% end %>
              </div>
            </div>
            <div class="to-wishlist">
              <%= link_to toggle_favorite_book_path(recommended_book.book) do %>
                <% if current_user.favorited?(recommended_book.book) %>
                  <img width="50" height="50" src="<%= image_path('icons/heart-red-celia.svg') %>">
                <% else %>
                  <img width="50" height="50" src="<%= image_path('icons/heart_celia.svg') %>">
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
