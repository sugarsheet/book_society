<div class="main-container-content">

  <div class="space-header">
    <div class="link-dashboard">
      <% avatar_photo  = current_user.photo.attached? ? current_user.photo.key : "http://placehold.it/40x40" %>
      <div><%= cl_image_tag avatar_photo, class:"avatar-user", crop: :fill %>
      </div>
        <div class="title-user">
          <a> Hi <%= current_user.first_name%>!</a>
        </div>
    </div>
    <div>
      <%= link_to search_path do %>
        <img src="<%= image_path('icons/search_celia.svg') %>" alt="search" class="search_icon">
      <% end %>
    </div>
  </div>
  <div class="title-dashboard"><h1><strong>My bookshelf</strong></h1></div>
  <div class="card-product-bookshelf">
    <% @reviews.each do |review| %>
        <div class="card-product-book">
          <% if review.book.photo.attached? %>
            <%= cl_image_tag review.book.photo.key, height: 150, crop: :fill %>
            <% else %>
            <img src="https://images.unsplash.com/photo-1571603772166-aecfc7104bf9?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80">
          <% end %>
            <ul class="bookshelf-list">
              <li class="list-books">
                <div class="books-desc">
                  <%= link_to book_path(review.book) do %>
                    <strong><h2 class="title-book-dash"><%= review.book.title %></h2></strong>
                  <% end %>
                  <br><h3 class="author-dash"><%= review.book.author.name %></h3>
                  <br><i class="date-review">Posted on <%= review.created_at.strftime("%d %B %Y")%></i>
                  <br>
                <div class="rating-stars mt-2">
                  <% review.rating.times do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                      <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                    </svg>
                  <% end %>
                  <% (5-review.rating).times do %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star" viewBox="0 0 16 16">
                      <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z"/>
                    </svg>
                  <% end %>
                </div>
               </div>
              </li>
            </ul>
        </div>
    <% end %>
  </div>
</div>
