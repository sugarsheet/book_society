<!-- app/views/pages/_list.html.erb -->

<div data-refresh-list-target="list">
  <% if @books %>
      <ul>
        <% @books.each do |book| %>
          <li><%= link_to book_path(book) do %>
            <div class="card-product">
              <% if book.photo.attached? %>
                <%= cl_image_tag book.photo.key, height: 150, crop: :fill %>
                <% else %>
                <img src="https://images.unsplash.com/photo-1571603772166-aecfc7104bf9?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80">
              <% end %>
              <div class="card-product-infos">
                <h2><%= book.title %></h2>
                <p><%= book.author.first_name %><strong><%= book.author.last_name %></strong></p>
              </div>
            </div>
          <% end %>
          </li>
        <% end %>
      </ul>
  <% end %>
</div>

