<div class="container">
  <div class="review-form">
    <div class="bg-white rounded p-3">
      <div class="card-product">
        <div class="image">
          <%= cl_image_tag @book.photo.key, height: 150, crop: :fill %>
        </div>
        <div class="card-content">
          <p><%=@book.title%>, <%=@book.author.first_name%> <%=@book.author.last_name%></p>
        </div>
      </div>

        <h3 class="text-center mb-5 mt-5"> Add to bookshelf </h3>
        <%= simple_form_for [@book, @review] do |f| %>
            <div class="rating mt-3">
              <%= f.input :rating, collection: (1..5).to_a, label: "Rating"%>
            </div>
        <%= f.input :content, placeholder: "Min 20 characters", label: "Thoughts" %>
        <%= f.submit class: 'btn-review mt-3', value: "Submit review"%>

        <% end %>

    </div>
  </div>
</div>
