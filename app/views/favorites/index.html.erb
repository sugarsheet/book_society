<div class="main-container-content">
  <div class="space-header">
    <div class="link-dashboard">
      <div class="favorite-books">



        <div class="title-favorite"><h1><strong>My favorites books</strong></h1></div>
        <div class="card-product-bookshelf">
          <% current_user.favorited_by_type('Book').each do |book| %>
            <div class="card-product-favorite">
              <% if book.photo.attached? %>
                <%= cl_image_tag book.photo.key, height: 150, crop: :fill %>
              <% else %>
                <img src="https://images.unsplash.com/photo-1571603772166-aecfc7104bf9?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2850&q=80">
              <% end %>
              <ul class="bookshelf-list">
                <li class="list-books">
                  <div class="books-desc">
                    <%= link_to book_path(book) do %>
                      <strong><%= book.title %></strong>
                    <% end %>
                    <br><%= book.author.first_name %>
                    <%=book.author.last_name%>
                  </div>
                  <%= link_to book_path(book) do %>
                    <div class="image-favorite">
                      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path></svg>
                    </div>
                  <% end %>
                </li>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
